.form-box{
    padding-left: 30rpx;
    padding-right: 30rpx;
    position: relative;
}
.form-box view{
    height: 90rpx;
    width: 100%
}
.form-box view text{
    display: inline-block;
    width: 20%;
    height: 90rpx;
    line-height: 90rpx;
    vertical-align: top;
    text-align: right;
}

.form-box  input{
    display: inline-block;
    width: 80%;
    height: 90rpx;
    color: #999;
}
.form-box .input-placeholder{
    color: #aaa;
}
.form-box button{
    display: inline-block;
    width: 48%;
    margin-right: 4%;
    margin-top:30rpx;
}
.form-box button:last-child{
    margin-right: 0;
    color: #fff;
    background-color: #898989;
}
switch{
    float:right;
    line-height:90rpx;
}




.picker-view {
    position: fixed;
    left: 0;
    bottom: 0;
}
.addr-item {
    line-height: 40px;
    text-align: center;
}


.pickerConfirm{
  position: fixed;
  z-index: 10000;
  left: 0;
  bottom: 500rpx;
  height: 80rpx;
  background-color: #fbf9fe;
  color: #586c94;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width:100%;
  padding:0 40rpx;
  box-sizing:border-box;
}
.pickerConfirm text{
  height: 80rpx;
  line-height: 80rpx;
}




