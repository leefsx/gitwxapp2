<import src="../../common/prompt.wxml"/>
<import src="../../common/nav.wxml" />
<import src="../../common/bar.wxml" />



<view class="main">
    <template is="nav" data="{{config}}" />
    <template is="bar" data="{{category_info}}" />
     <view class="artical-category">
        <view class="category-arrow" bindtap="arrowMinus"><image src="/image/mb2-10.png"></image></view>
        <scroll-view scroll-x scroll-with-animation bindscroll="scroll" scroll-left="{{scrollLeft}}" bindtouchstart="oTs" bindtouchend="oTe">
              <view wx:for="{{articalUl}}" data-id="{{item.id}}" class="{{activeIndex == item.id ? 'active':''}} medium_font" bindtap="changActive">{{item.name}}</view>
        </scroll-view>
        <view class="category-arrow" bindtap="arrowPlus"><image src="/image/mb2-11.png"></image></view>
    </view> 
    <view class="artical-ul">
        <navigator wx:for="{{article}}" url="../artical-detail/artical-detail?id={{item.id}}" class="artical-li">
            <view class="artical-li-title">
                <view>
                    <text class="color5">[{{item.category_name}}]</text>
                    <text class="tooLong" style="max-width:300rpx;display:inline-block;vertical-align:top;">[{{item.title}}]</text>
                </view>
                <text class="color2 small_font">{{item.publish_time}}</text>
            </view>
            <view class="color2 small_font tooLong">{{item.content}}</view>
        </navigator>
        <template is="prompt" data="{{prompt}}"></template>
    </view>
</view>
